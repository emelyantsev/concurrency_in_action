{
    "tasks": [
        {
          "type": "cppbuild",
          "label": "Linux C/C++: g++ DEBUG build all *.cpp in folder",
          "command": "/usr/bin/g++",
          "args": [
              "-fdiagnostics-color=always",
              "-I", "${workspaceFolder}/common",
              "-g",
              "*.cpp",
              "-o",
              "${fileDirnameBasename}",
              "-std=c++23"
          ],
          "options": {
              "cwd": "${fileDirname}"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "detail": "Task generated by Debugger."
      },

      {
        "type": "cppbuild",
        "label": "Linux C/C++: g++ RELEASE build",
        "command": "/usr/bin/g++",
        "args": [
            "-fdiagnostics-color=always",
            "-I", "${workspaceFolder}/common",
            "*.cpp",
            "-o", "${fileDirnameBasename}_release",
            "-std=c++23",
            "-O3",          
            "-DNDEBUG"      
        ],
        "options": {
            "cwd": "${fileDirname}"
        },
        "group": {
              "kind": "build",
              "isDefault": true
        },
      }, 

      {
        "type": "shell",
        "label": "Windows C/C++: DEBUG build all *.cpp in folder",
        "command": "cl.exe",
        "args": [
          "-I", "${workspaceFolder}/common",
          "/Zi",
          "/EHsc",
          "/std:c++23preview",
          "/nologo",
          "/Fe:",
          "${fileDirnameBasename}",
          "../*.cpp"
        ],
        "options": {
              "cwd": "${fileDirname}/build"
        },
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      },

      {
        "type": "shell",
        "label": "Windows C/C++: RELEASE build all *.cpp in folder",
        "command": "cl.exe",
        "args": [
          "-I", "${workspaceFolder}/common",
          "/O2",
          "/DNDEBUG",          
          "/EHsc",
          "/std:c++23preview",
          "/nologo",
          "/Fe:",
          "${fileDirnameBasename}",
          "../*.cpp"
        ],
        
        "options": {
              "cwd": "${fileDirname}/build_release"
        },
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ],

    "version": "2.0.0"
}