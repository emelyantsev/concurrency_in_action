{
    "tasks": [
        {
          "type": "cppbuild",
          "label": "Linux C/C++: g++ DEBUG build all *.cpp in folder",
          "command": "/usr/bin/g++",
          "args": [
              "-fdiagnostics-color=always",
              "-I", "${workspaceFolder}/common",
              "-g",
              "*.cpp",
              "-o",
              "${fileDirnameBasename}",
              "-std=c++20"
          ],
          "options": {
              "cwd": "${fileDirname}"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "detail": "Task generated by Debugger."
      },

      {
        "type": "shell",
        "label": "Windows C/C++: DEBUG build all *.cpp in folder",
        "command": "cl.exe",
        "args": [
          "-I", "${workspaceFolder}/common",
          "/Zi",
          "/EHsc",
          "/std:c++20",
          "/nologo",
          "/Fe:",
          "${fileDirnameBasename}",
          "../*.cpp"
        ],
        "options": {
              "cwd": "${fileDirname}/build"
        },
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": false
        },
        "detail": "Task generated by Debugger."
      }
    ],

    "version": "2.0.0"
}